{
  "version": 2,
  "builds": [
    {
      "src": "plaigiarized-next/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/plaigiarized-next/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/plaigiarized-next/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  },
  "buildCommand": "cd src/frontend && npm run build",
  "outputDirectory": "src/frontend/dist",
  "installCommand": "cd src/frontend && npm install --force",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 